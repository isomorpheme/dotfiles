	helper = !/usr/bin/gh auth git-credential

[color]
    ui = auto

[alias]
    a = add
    c = commit
    co = checkout
    sw = switch
    ps = push
    pl = pull
    s = status

[pull]
    rebase = true

[diff]
    algorithm = histogram

[rebase]
    autosquash = true

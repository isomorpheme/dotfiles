[user]
    name = Daan Rijks
    email = daanrijks@pm.me

[credential "https://github.com"]
	helper =
	helper = !/usr/bin/gh auth git-credential

[color]
    ui = auto

[alias]
    a = add
    c = commit
    co = checkout
    sw = switch
    ps = push
    pl = pull
    s = status

    m = machete

[pull]
    rebase = true

[diff]
    algorithm = histogram
    colorMoved = true

[merge]
    conflictStyle = diff3

[rebase]
    autosquash = true

[rerere]
	enabled = true

[submodule]
    recurse = true

[filter "lfs"]
	clean = git-lfs clean -- %f
	smudge = git-lfs smudge -- %f
	process = git-lfs filter-process
	required = true
